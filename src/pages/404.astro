---
const description = "404";
import "../styles/global.css";
---

<layout>
  <div class="lost">
    <div class="gif">
      <img
        width="300"
        height="259"
        alt="Opossum playing dead Gif. Source: https://giphy.com/stickers/possum-stangif-stangifpet-erNtBzuv2vuyLzYWmD"
        src="/dead-possum.gif"
      />
    </div>
    <h1 class="lost__header">{description}</h1>
    <p class="lost__body">
      It seems like you've wandered into the wrong forest!
    </p>
    <p>
      <a class="lost__link" href="/">Return Home</a>
    </p>
  </div>
</layout>
